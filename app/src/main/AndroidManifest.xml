    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Companies.SearchActivity">


        </activity>

        <activity android:name=".Companies.YearActivity">

            </activity>
        <activity android:name=".Main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Users.LoginActivity" />
        <activity android:name=".Users.RegisterActivity" />
        <activity android:name=".Profile.ProfileActivity" />
        <activity android:name=".Profile.AccountSettingsActivity" />
        <activity android:name=".Profile.DeveloperActivty" />
