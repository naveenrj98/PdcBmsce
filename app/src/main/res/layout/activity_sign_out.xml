                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"

                                        android:layout_marginBottom="8dp">
                                        <EditText

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="textEmailAddress"
                                            android:hint="Email"
